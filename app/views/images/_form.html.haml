= simple_form_for @image, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  = f.input :image
  = f.input :gallery_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), images_path, :class => 'btn'
