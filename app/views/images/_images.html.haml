- model_class = Image

%table.table.table-striped.datatable.table-bordered
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:gallery_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @images.each do |image|
      %tr
        %td= link_to truncate(image.name), image_path(image)
        %td= truncate(image.description)
        %td= link_to truncate(image.gallery.name), image.gallery
        %td=l image.created_at, format: :short
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_image_path(image), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(image), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
