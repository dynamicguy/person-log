- model_class = Image

.span9
  - cache @fleet do
    = render_breadcrumbs
    .well
      .navbar.navbar-heading
        .navbar-inner
          .container
            %span.brand= t '.title', :default => model_class.model_name.human
            = link_to raw('<i class="icon-edit-sign"></i> ' + t('.edit', :default => t("helpers.links.edit"))), edit_image_path, :class => 'btn btn-success btn-mini btn-plus pull-right'

      = render 'image'

      .form-actions
        = link_to t('.back', :default => t("helpers.links.back")), images_path, :class => 'btn'
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_image_path(@image), :class => 'btn'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(@image), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

.span3= render 'sidebar'