<% content_for :title do
  'Resend Confirmation instructions'
end %>

<div class="well">
  <div class="navbar navbar-heading">
    <div class="navbar-inner">
      <div class="container">
        <span class="brand">
           Resend confirmation instructions
        </span>
      </div>
    </div>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:method => :post, :class => 'form-vertical'}) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, :required => true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Resend confirmation instructions", :class => 'btn btn-primary' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>