<div class="well">
  <div class="navbar navbar-heading">
    <div class="navbar-inner">
      <div class="container">
        <span class="brand">Edit <%= resource_name.to_s.humanize %> Details</span>
        <%= link_to '<i class="icon-backward"></i>'.html_safe, :back, :class => 'btn btn-mini pull-right' %>
      </div>
    </div>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                      :html => {:method => :put, :class => 'form-horizontal', :autocomplete => 'off'}) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name, :autofocus => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :avatar, :as => :avatar %>
      <%= f.input :avatar_cache, :as => :hidden %>
      <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
      <%= f.input :password_confirmation, :required => false %>
      <%#= f.input :current_password, :hint => "we need your current password to confirm your changes",
      :required => true %>
      <%= f.input :bio, :as => :text, :input_html => {:cols => 50, :rows => 5} %>
      <%= f.input :tag_list %>
      <div class="form-actions">
        <%= f.button :submit, 'Update', :class => 'btn btn-af' %>
        Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => {:confirm => "Are you sure?"}, :method => :delete %>
      </div>
  <% end %>
</div>