<div id="request-invite" class="modal fade in" style="display: <%= @user.errors.any? ? 'block' : 'none'; %>">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'} do |f| %>
      <div class="modal-header">
        <a class="close" data-dismiss="modal"><i class="icon-remove-circle"></i></a>

        <h3>Request Invitation</h3>
      </div>
      <div class="modal-body">
        <%= f.error_notification %>
        <%= f.input :email, :placeholder => 'user@example.com', :autofocus => true %>
      </div>
      <div class="modal-footer">
        <%= f.submit "Request Invitation", :class => "btn btn-af", :id => 'invitation_button' %>
        <a class="btn" data-dismiss="modal" href="#">Close</a>
      </div>
  <% end %>
</div>

<div id="romance-copy">
  <div class="c-alert pillow-emboss">
    <div class="alert-message info">
      <h1 id="tagline">PersonLog.com &mdash; All about SAVAR disaster & it's aftermath</h1>
    </div>
  </div>
  <p>This app helps people reconnect with friends and loved ones in the aftermath of natural and humanitarian disasters like savar.</p>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="button-action">
      <a class="btn btn-warning btn-large" id="request-invite-button" data-toggle="modal" href="#request-invite">
        <span><i class="icon-magic icon-large"></i></span>
        Request Invitation
      </a>
    </div>
  </div>
</div>
<div class="clearfix">&nbsp;</div>