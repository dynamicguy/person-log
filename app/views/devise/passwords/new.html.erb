<% content_for :title do 'New Password' end %>
<div class="well">
  <div class="navbar navbar-heading">
    <div class="navbar-inner">
      <div class="container">
        <span class="brand">Forgot your password?</span>
        <%= link_to '<i class="icon-backward"></i>'.html_safe, :back, :class => 'btn btn-mini pull-right' %>
      </div>
    </div>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, :autofocus => true %>
      <%= f.submit "Send me reset password instructions", :class => 'btn btn-af' %>
  <% end %>
  <br/>
  <%= render "devise/shared/links" %>

</div>