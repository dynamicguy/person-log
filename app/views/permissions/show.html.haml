- model_class = Permission


.span9
  = render_breadcrumbs
  .well
    .navbar.navbar-heading
      .navbar-inner
        .container
          %span.brand= t '.title', :default => model_class.model_name.human

    %p
      %strong= model_class.human_attribute_name(:action) + ':'
      %br
      = @permission.action
    %p
      %strong= model_class.human_attribute_name(:subject_class) + ':'
      %br
      = @permission.subject_class
    %p
      %strong= model_class.human_attribute_name(:subject_id) + ':'
      %br
      = @permission.subject_id
    %p
      %strong= model_class.human_attribute_name(:role_id) + ':'
      %br
      = @permission.role_id

    .form-actions
      = link_to t('.back', :default => t("helpers.links.back")), permissions_path, :class => 'btn'
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_permission_path(@permission), :class => 'btn'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), permission_path(@permission), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

.span3.right-sidebar-fluid
  = render 'permissions/sidebar'