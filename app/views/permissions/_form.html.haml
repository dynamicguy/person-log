= simple_form_for @permission, :html => { :class => 'form-horizontal' } do |f|
  = f.input :action
  = f.input :subject_class
  = f.association :role, :prompt => 'Select a role'
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), permissions_path, :class => 'btn'
