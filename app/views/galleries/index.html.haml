- model_class = Gallery

.span9
  = render_breadcrumbs
  .well
    .navbar.navbar-heading
      .navbar-inner
        .container
          %span.brand=t '.title', :default => model_class.model_name.human.pluralize + ' Listing'
          = link_to raw('<i class="icon-plus-sign"></i> ' + t('.new', :default => t("helpers.links.new"))),
          new_gallery_path,
          :class => 'btn btn-af btn-mini pull-right'
    %table.datatable.table.table-striped.table-bordered
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
          %th= model_class.human_attribute_name(:name)
          %th= model_class.human_attribute_name(:description)
          %th= model_class.human_attribute_name(:user_id)
          %th= model_class.human_attribute_name(:created_at)
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @galleries.each do |gallery|
          %tr
            %td= link_to gallery.id, gallery_path(gallery)
            %td= truncate gallery.name
            %td= truncate gallery.description
            %td= link_to gallery.user.name, gallery.user
            %td=l gallery.created_at
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_gallery_path(gallery), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), gallery_path(gallery), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'


.span3.right-sidebar-fluid
  = render 'educations/sidebar'
    