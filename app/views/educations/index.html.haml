- model_class = Education

.span9
  = render_breadcrumbs
  .well
    .navbar.navbar-heading
      .navbar-inner
        .container
          %span.brand=t '.title', :default => model_class.model_name.human.pluralize + ' Listing'
          = link_to raw('<i class="icon-plus-sign"></i> ' + t('.new', :default => t("helpers.links.new"))),
          new_education_path,
          :class => 'btn btn-af btn-mini pull-right'

    %table.datatable.table.table-striped.table-bordered
      %thead
        %tr
          %th= model_class.human_attribute_name(:school)
          %th= model_class.human_attribute_name(:degree)
          %th= model_class.human_attribute_name(:field_of_study)
          %th= model_class.human_attribute_name(:end_date)
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @educations.each do |education|
          %tr
            %td= link_to education.school, education_path(education)
            %td= education.degree
            %td= education.field_of_study
            %td=l education.end_date, format: :long
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_education_path(education), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), education_path(education), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

.span3.right-sidebar-fluid
  = render 'educations/sidebar'
