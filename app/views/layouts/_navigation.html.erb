<div class="navbar-inner">
  <div class="container" style="width: auto;">
    <a class="brand" href="/"><img src="/assets/logo.png"></a>
    <ul class="nav pull-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-xlarge icon-user"></i>
          <b class="caret"></b></a>

        <ul class="dropdown-menu dropdown-user-account">
          <% if user_signed_in? %>
              <li class="account-img-container">
                <%= image_tag(current_user.avatar.thumb, :class => 'thumb account-img') %>
              </li>
              <li class="account-info">
                <h3><%= current_user.name %></h3>

                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore
                  et
                  dolore magna aliqua.</p>

                <p><%= link_to 'Edit', edit_user_registration_path %> | <%= link_to 'Change password', edit_user_password_path %>
              </li>
              <li class="account-footer">
                <div class="row-fluid">
                  <div class="span8">
                    <a class="btn btn-primary btn-small" href="#">Change avatar</a>
                    <%= link_to 'View profile', current_user, :class => 'btn btn-primary btn-small' %>
                  </div>
                  <div class="span4 align-right">
                    <%= link_to 'Logout', destroy_user_session_path, :method => 'delete', :class => 'btn btn-danger btn-small' %>
                  </div>
                </div>
              </li>
          <% else %>
              <li>
                <%= link_to 'Login', new_user_session_path %>
              </li>
              <li>
                <%= link_to 'Sign up', new_user_registration_path %>
              </li>
        <% end %>
        </ul>

      </li>
    </ul>

  </div>
</div>