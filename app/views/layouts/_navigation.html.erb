<div class="navbar-inner">
  <div class="container" style="width: auto;">
    <a class="brand" href="/"><img src="/assets/logo.png"></a>
    <ul class="nav pull-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-xlarge icon-user"></i>
          <b class="caret"></b></a>

        <ul class="dropdown-menu dropdown-user-account">
          <% if user_signed_in? %>
              <li class="account-img-container">
                <%= image_tag(current_user.avatar.thumb, :class => 'thumb account-img') %>
              </li>
              <li class="account-info">
                <h3><%= current_user.name %></h3>

                <p><%= current_user.bio %></p>
              </li>
              <li class="account-footer">
                <div class="row-fluid">
                  <div class="span12">
                    <%= link_to 'Edit profile', edit_user_registration_path, :class => "btn btn-primary btn-small" %>
                    <%= link_to 'View profile', current_user, :class => 'btn btn-primary btn-small' %>
                    <%= link_to 'Logout', destroy_user_session_path, :method => 'delete',
                                :class => 'btn btn-danger btn-small' %>
                  </div>
                </div>
                <div class="clearfix"></div>
              </li>
          <% else %>
              <li>
                <%= link_to 'Login', new_user_session_path %>
              </li>
              <li>
                <%= link_to 'Sign up', new_user_registration_path %>
              </li>
          <% end %>
        </ul>

      </li>
    </ul>

  </div>
</div>