<head>
  <title>Person Log &mdash; All about persons (alive, dead, undead, or fictional)</title>
  <%= render 'layouts/head' %>
  <style type="text/css">
      #tagline {
          text-align: center;
          font-family: Neuton;
          font-size: 19px;
      }

      .blank-container {
          padding: 15px;
          background: transparent url("/assets/bg.jpg") repeat;
      }

      .alert-message.info {
          padding: 0 5px;
      }

      .front-bg {
          background-color: #292929;
      }

      #img.source-image {
          overflow: hidden;
      }

      .footer {
          text-align: center;
          font-size: 12px;
      }

      .footer ul li a {
          text-decoration: underline;
      }

      .footer ul li {
          display: inline-block;
          margin: 0 10px 0 0;
      }

      #request-invite-button {
          font-size: 17px;
          text-align: right;
      }

      .button-action .btn {
          margin: 0px auto;
      }

      .button-action .btn span i {
          line-height: 45px;
      }

      .brand {
          text-align: center;
          font-size: 15px;
      }
  </style>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body class="<%= controller_name %>_<%= action_name %>">
<!-- Prompt IE 6 users to install Chrome Frame. Remove this if you support IE 6.
chromium.org/developers/how-tos/chrome-frame-getting-started -->
<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a
    different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a>
    to experience this site.</p><![endif]-->
<div class="front-bg"><img class="source-image" src="/assets/body-bg.jpg" alt="" style="opacity: 0.1;"/></div>
<div class="container-fluid" style="top:25%;position: absolute;width: 100%;">
  <div class="row-fluid">
    <div class="span3">&nbsp;</div>
    <div class="span6">
      <div class="blank-container pillow-emboss">
        <%= render 'layouts/messages' %>
        <%= yield %>
        <%= render "layouts/footer" %>
      </div>
    </div>
    <div class="span3">&nbsp;</div>
  </div>
</div>
<!--! end of .container -->
<div id="loaderImage" style="display: none;"></div>
<%= javascript_include_tag "application" %>
<script type="text/javascript">
    // <![CDATA[
    $(document).ready(function () {
        var $winwidth = $(window).width();
        var $winheight = $(window).outerHeight(true);
        $('img.source-image').css('min-height', $winheight + 20 + 'px')
        $('img.source-image').css('min-width', $winwidth + 20 + 'px')
        $(window).bind("resize", function () {
            var $winwidth = $(window).width();
            var $winheight = $(window).outerHeight(true);
            $('img.source-image').css('min-height', $winheight + 20 + 'px')
            $('img.source-image').css('min-width', $winwidth + 20 + 'px')
        });
    });
    //]]>
</script>
</body>
</html>