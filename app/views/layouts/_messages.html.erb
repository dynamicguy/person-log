<% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
          <div class="c-alert pillow-emboss alert-message <%= name == :notice ? "success" : "error" %>">
            <a class="close" href="#" data-dismiss="alert"><i class="icon-large icon-remove-circle"></i></a>
            <%= content_tag :p, msg %>
          </div>
    <% end %>
<% end %>